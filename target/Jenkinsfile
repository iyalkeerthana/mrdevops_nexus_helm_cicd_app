pipeline {
    agent any
    stages {
        stage('SonarQube Code Qaulity Check') {
            agent {
                docker {
                    image 'maven'
                    volumes {
                        '/home/jenkins/.m2/repository'
                    }
                }
            }
            steps {
                script {
                    withSonarQubeEnv(credentialsId: 'sonar-token') { 
                     sh 'mvn --version'
                     sh 'mvn clean package sonar:sonar'
                 }

                }
            }
        }
    }
}