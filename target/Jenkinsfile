pipeline {
    agent any
    stages {
        stage ('SonarQube Code Check') {
            agent {
                docker {
                    image 'maven'
                    args '-v $HOME/.m2:/root/.m2'
                }
            }
            steps {
                script {
                    sh 'chown -R jenkins:jenkins $HOME/.m2'
                    withSonarQubeEnv(credentialsId: 'sonar-token') {
                        sh 'mvn -e clean package sonar:sonar'
                    }

                }
               
            }
        }
    }
}

